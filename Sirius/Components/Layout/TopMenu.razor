    <div style="margin-left: 1em; margin-right: 1em; border-left: 1px solid grey"></div>
    <div class="div-top-menu">
        <button class="btn-icon-default @(UrlSelected("") ? "top-menu-selected" : "")"
                onclick="@(() => OnClickMenu.InvokeAsync("/"))">
