@page "/payment"

<PageTitle>Pagamentos</PageTitle>

@if (categories == null)
{
    <LoadingComponent isInLineProgress=true></LoadingComponent>
}

<div class="div-search-content">
    <span>Filtros: </span>
    <input @bind-value="searchContent" @bind-value:event="oninput" placeholder="Nome ou descrição da categoria" />
    <button class="btn-default" @onclick=OnClickCreate>
        <span>Nova categoria</span>
    </button>
</div>
<div class="div-content @(categories == null ? "d-none" : "")">
    <table class="table">
        <thead>
            <tr>
                <th></th>
                <th>Id</th>
                <th>Nome</th>
                <th>Descrição</th>
                <th>Criado em</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in FilterCategory())
            {
                <tr>
                    <td style="width: 8em">
                        <button class="btn-icon-default" @onclick=@(() => OnClickDelete(category))>
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                                <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0z" />
                                <path d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4zM2.5 3h11V2h-11z" />
                            </svg>
                        </button>
                        <button class="btn-icon-default" @onclick=@(() => OnClickUpdate(category))>
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil" viewBox="0 0 16 16">
                                <path d="M12.146.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1 0 .708l-10 10a.5.5 0 0 1-.168.11l-5 2a.5.5 0 0 1-.65-.65l2-5a.5.5 0 0 1 .11-.168zM11.207 2.5 13.5 4.793 14.793 3.5 12.5 1.207zm1.586 3L10.5 3.207 4 9.707V10h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.293zm-9.761 5.175-.106.106-1.528 3.821 3.821-1.528.106-.106A.5.5 0 0 1 5 12.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.468-.325" />
                            </svg>
                        </button>
                        <button class="btn-icon-default" @onclick=@(() => OnClickCopyToClipboard(category))>
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-clipboard" viewBox="0 0 16 16">
                                <path d="M4 1.5H3a2 2 0 0 0-2 2V14a2 2 0 0 0 2 2h10a2 2 0 0 0 2-2V3.5a2 2 0 0 0-2-2h-1v1h1a1 1 0 0 1 1 1V14a1 1 0 0 1-1 1H3a1 1 0 0 1-1-1V3.5a1 1 0 0 1 1-1h1z" />
                                <path d="M9.5 1a.5.5 0 0 1 .5.5v1a.5.5 0 0 1-.5.5h-3a.5.5 0 0 1-.5-.5v-1a.5.5 0 0 1 .5-.5zm-3-1A1.5 1.5 0 0 0 5 1.5v1A1.5 1.5 0 0 0 6.5 4h3A1.5 1.5 0 0 0 11 2.5v-1A1.5 1.5 0 0 0 9.5 0z" />
                            </svg>
                        </button>
                    </td>
                    <td style="width:15em; max-width: 15em; overflow: hidden; text-overflow: ellipsis; white-space: nowrap;">
                        @category.Id
                        </td>
                    <td style="width:15em; max-width: 15em; overflow: hidden; text-overflow: ellipsis; white-space: nowrap;">
                        @category.Name
                    </td>
                    <td>
                        @category.Description
                    </td>
                    <td style="width: 10em">
                        @category.CreateAt.ToShortDateString()
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@code {
    private List<CategoryResponseDTO>? categories;
    private string searchContent = "";
    [Inject]
    private ICategoryService categoryService { get; set; } = default!;
    [Inject]
    private DialogProvider dialogProvider { get; set; } = default!;
    [Inject]
    private JavaScriptProvider javaScriptProvider { get; set; } = default!;

    protected override async Task OnInitializedAsync()
    {
        categories = await categoryService.GetAll();
    }

    private List<CategoryResponseDTO> FilterCategory()
    {
        if (categories == null)
        {
            return [];
        }
        if (string.IsNullOrEmpty(searchContent))
        {
            return categories;
        }
        return categories.Where(x => x.Name.ToUpper().Contains(searchContent.ToUpper()) ||
                                     (x.Description ?? string.Empty).ToUpper().Contains(searchContent.ToUpper()))
                         .ToList();
    }

    private void OnClickCreate()
    {
        RenderFragment body = __builder =>
        {
            <CategoryCreate />
        };
        dialogProvider.OpenDialog("Nova categoria", body, CallBackCreateCategory);
    }

    private void OnClickUpdate(CategoryResponseDTO category)
    {
        RenderFragment body = __builder =>
        {
            <CategoryUpdate request="category.ToRequest()" />
        };
        dialogProvider.OpenDialog("Atualizar categoria", body, CallBackUpdateCategory);
    }
    private void OnClickDelete(CategoryResponseDTO category)
    {
        RenderFragment body = __builder =>
        {
            <CategoryDelete category="category" />
        };
        dialogProvider.OpenDialog("Remover categoria", body, CallBackDeleteCategory);
    }


    private Task CallBackCreateCategory(object? obj)
    {
        var created = obj as CategoryResponseDTO;
        if (created != null)
        {
            categories!.Insert(0, created);
            StateHasChanged();
        }
        return Task.CompletedTask;
    }

    private Task CallBackDeleteCategory(object? obj)
    {
        if (categories == null)
        {
            return Task.CompletedTask;
        }
        var removed = obj as CategoryResponseDTO;
        if (removed != null)
        {
            var item = categories.First(x => x.Id == removed.Id);
            var indexOf = categories.IndexOf(item);
            categories.RemoveAt(indexOf);
            StateHasChanged();
        }
        return Task.CompletedTask;
    }

    private Task CallBackUpdateCategory(object? obj)
    {
        if(categories == null)
        {
            return Task.CompletedTask;
        }
        var updated = obj as CategoryResponseDTO;
        if (updated != null)
        {
            var item = categories.First(x => x.Id == updated.Id);
            var indexOf = categories.IndexOf(item);
            categories.RemoveAt(indexOf);
            categories.Insert(indexOf, updated);
            StateHasChanged();
        }
        return Task.CompletedTask;
    }

    private void OnClickCopyToClipboard(CategoryResponseDTO category)
    {
        javaScriptProvider.CopyToClipBoard(category.Id.ToString());
    }

}
